{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "general": {
                    "dsForceDrm": false     //check for wayland first in the wm module
               },
    "logo": {
                "type": "file",
                "source": "~/.config/fastfetch/astronaut.txt",
                "color": {"1": "magenta", "2": "white" }
            },
    "display": {
                    "separator": " ",
                    "fraction": {"ndigits":2},
                    "temp": {"ndigits":2},
                    "freq": {"ndigits":2},
                    "percent": {"ndigits":2},
                    "size":  {"ndigits":2}
               },
    "modules": [
        "break",
