// Note that you must replace the image path to an existing image to display it.

{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "file",
        "source": "~/.config/fastfetch/astronaut.txt",
            },
    "display": {
                    "separator": " "
               },
    "modules": [
        "break",
        {
            "type": "host",
            "key": "╭─ System ─╮",
            "keyColor": "blue"
        },
        {
            "type": "command",
            "key": "├─ OS Age ─┤",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days",
            "keyColor": "blue"
        },
        {
            "type": "uptime",
            "key": "├─ Uptime ─┤",
            "keyColor": "blue"
        },
        {
            "type": "cpu",
            "temp": true,
            "key": "├─ CPU ────┤",
            "keyColor": "blue"
        },
        {
            "type": "gpu",
            "detectionmethod": "pci",
            "temp": true,
            "key": "├─ GPU ────┤",
            "keyColor": "blue"
        },
        {
            "type": "memory",
            "key": "├─ RAM ────┤",
            "keyColor": "blue"
        },
        {
            "type": "swap",
            "key": "╰─ Swap ───╯",
            "keyColor": "blue"
        },
        "break",

        {
            "type": "kernel",
            "key": "╭─ Kernel ───╮",
            "format": "{1} {2}",
            "keyColor": "blue"
        },
        {
            "type": "shell",
            "key": "├─ Shell ────┤",
            "keyColor": "blue"
        },
        {
            "type": "terminal",
            "key": "├─ Terminal ─┤",
            "keyColor": "blue"
        },
        {
            "type": "de",
            "key": "├─ Desktop ──┤",
            "keyColor": "blue"
        },
        {
            "type": "packages",
            "key": "╰─ Packages ─╯",
            "keyColor": "blue"
        },
//Sometimes the weather check can take 5-10 seconds
        "break",
        {
            "type": "weather",
            "key": " ☀️ Weather 🌥 ",
            "keyColor": "white"
        },
    ]
}
